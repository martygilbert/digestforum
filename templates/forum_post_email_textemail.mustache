{{!
    @template mod_digestforum/digestforum_post_email_textemail

    Template which defines a digestforum post for sending in a single-post text email.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * coursename
    * digestforumname
    * showdiscussionname
    * discussionname
    * permalink
    * subject
    * authorfullname
    * postdate
    * message
    * attachments
    * canreply
    * replylink
    * unsubscribedigestforumlink
    * unsubscribediscussionlink
    * digestforumindexlink
}}
{{{ coursename }}} -> {{# str }} digestforums, digestforum {{/ str }} -> {{{ digestforumname }}}{{# showdiscussionname }} -> {{{ discussionname }}} {{/ showdiscussionname }}
{{ permalink }}
{{{ subject }}}
{{# str }} bynameondate, digestforum, {
        "name": {{# quote }}{{{ authorfullname }}}{{/ quote }},
        "date": {{# quote}}{{ postdate }}{{/ quote }}
    } {{/ str }}
---------------------------------------------------------------------
{{{ message }}}

{{{ attachments }}}
---------------------------------------------------------------------
{{# canreply }}
{{# str }} postmailinfolink, digestforum, {
        "coursename": {{# quote }}{{{ coursename }}}{{/ quote }},
        "replylink": {{# quote }}{{ replylink }}{{/ quote }}
    } {{/ str }}
{{/ canreply }}
{{# unsubscribedigestforumlink }}
{{# str }} unsubscribelink, digestforum, {{{ unsubscribedigestforumlink }}} {{/ str }}
{{/ unsubscribedigestforumlink }}
{{# unsubscribediscussionlink }}
